<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#000000">
    <TextureView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <cn.ckz.camera.view.TextureVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      />
    <cn.ckz.camera.view.CameraTouchView
        android:id="@+id/camera_touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

        <cn.ckz.camera.view.ImageViewFix
            android:visibility="gone"
            android:id="@+id/picture"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>


    <cn.ckz.camera.view.TakePhotoButton
        android:id="@+id/take_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        app:outCircleColor="@android:color/white"
        app:innerCircleColor="@android:color/holo_red_light"
        app:readColor="@android:color/holo_red_light"/>
    <ImageView
        android:id="@+id/close_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/camera_finish"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="50dp"
        tools:ignore="RtlHardcoded" />
    <ImageView
        android:id="@+id/camera_back"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:src="@mipmap/camera_back"
        android:layout_marginLeft="20dp"/>
    <ImageView

        android:id="@+id/camera_sucess"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/camera_sucess"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/camera_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_change"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>
