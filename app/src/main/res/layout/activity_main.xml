<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/open_alumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开相册"
            android:visibility="gone"/>
        <Button
            android:id="@+id/open_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="打开相机"/>
        <Button
            android:id="@+id/open_my_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开自定义相机(activity)"/>
        <Button
            android:id="@+id/open_fragment_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开自定义相机(动态fragment)"
            android:visibility="gone"/>
        <Button
            android:id="@+id/open_fragment_camera2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开自定义相机(静态fragment)"
            android:visibility="gone"/>
        <Button
            android:id="@+id/open_fragment_camera3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开自定义相机(静态fragment)"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shangc"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
